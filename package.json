{
  "name": "daton-esg-insight-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@ws/web",
    "dev:native": "turbo run dev --filter=@ws/native",
    "dev:backend": "turbo run dev --filter=@ws/backend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "turbo run format",
    "e2e:web": "turbo run e2e --filter=@ws/web",
    "e2e:web:headed": "bun run --cwd apps/web e2e:headed",
    "e2e:web:install": "bun run --cwd apps/web e2e:install"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "turbo": "^2.5.6"
  }
}
